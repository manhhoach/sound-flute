<br>
<div class="mt-4">
  <div class="row">
    {{#each posts}}
    <div class="col-sm-6 col-lg-3">
      <div class="card-break">
        <a href="/posts/{{this._id}}" class="card-link">
          <img class="card-img-break" src="{{this.image}}">
          <p class="card-header">{{this.header}}</p>
        </a>
      </div>
    </div>
    {{/each}}
  </div>
</div>